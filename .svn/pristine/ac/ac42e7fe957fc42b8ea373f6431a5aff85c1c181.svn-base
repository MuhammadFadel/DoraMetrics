                var projectsDto = JsonConvert.DeserializeObject<List<GitlabProjectDto>>(Convert.ToString(response.Result));
                var projects = _mapper.Map<IEnumerable<Project>>(projectsDto);
                return View(projects);
            }
            return View();
        }        

